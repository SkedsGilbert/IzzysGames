<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/boardLine</item>
    </style>

    <style name="Spacer">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="VerticalLine">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/boardLine</item>
    </style>

    <style name="BoardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">110dp</item>
        <item name="android:width">110dp</item>
        <item name="android:textSize">75sp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="GameFont">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="NameTextbox">
        <item name="android:background">#616161</item>
        <item name="android:textSize">@dimen/game_font_size</item>
    </style>

    <style name="ButtonDesign">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/game_font_size</item>
    </style>
</resources>
